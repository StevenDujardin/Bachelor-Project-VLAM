generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Recipe {
  recipe_id   Int    @id @default(autoincrement())
  title       String
  time        String
  description String
  category    String
  difficulty  String
  ingredients String[]
}

model Ingredient {
   ingredient_id   Int    @id @default(autoincrement())
   name  String
}
